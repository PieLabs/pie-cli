{
  "compilerOptions": {
    "compileOnSave": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "noImplicitUseStrict": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "lib/",
    "target": "es6",
    "typeRoots": [
      "./node_modules/@types",
      "./local-typings"
    ]
  },
  "include": [
    "src/**/*"
  ]
}