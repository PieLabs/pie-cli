#!/usr/bin/env bash

## as this is a post install we can't rely on any dev dependencies - just some shell scripting.

rm -fr support/base/node_modules
rm -fr support/react/node_modules
rm -fr support/less/node_modules
rm -fr support/corespring-legacy/node_modules

pwd

cd support/base

pwd
npm install --json > base.log

pwd
cd ../react
npm install --json > react.log

pwd
cd ../less
npm install --json > less.log

pwd
cd ../corespring-legacy
npm install --json > corespring-legacy.log